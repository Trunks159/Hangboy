<WindowManager>:

<Button>:

	color:1,0,0,1
	background_normal: ""
	background_color:1,1,1,1

<MainWindow>:
	name: "main"
	btna : btna
	FloatLayout:
		Button: 
			id: btna
			text: "Begin"
			font_size:40
			pos_hint: {"x":.35, "top":.65}
			size_hint : .3,.3
			on_release:app.root.current = "second"
		Button:
			id: btnb
			text: "Exit Game"		
			font_size:25
			size_hint : .3,.3
			on_release: quit()

<SecondWindow>:
	name: "second"
	FloatLayout:
		Label:
			id:new
			text: "Welcome To Hangman"
			color: 0,0,0,1
			font_size:40
			pos_hint: {"x":.35, "top":1}
			size_hint: .3,.3
		Label:
			text: root.prompt
			font_size : 18
			color: 0,0,0,1
		Button:
			text: "Continue?"
			font_size : 25
			color: 0,0,0,1
			pos_hint: {"x":.2, "y": .25}
			size_hint: .2,.1
			on_press:root.selecting_hangman()
			on_release:
				app.root.current = "third"
				root.manager.transition.direction = "left"
		Button:
			text: "Exit?"
			font_size : 25
			color: 0,0,0,1
			pos_hint: {"x":.7, "y":.25 }
			size_hint: .2,.1
			on_press: quit()

<ThirdWindow>:
	name: "third"
	FloatLayout:
		id: float_3
		Button:	
			text: "Back"
			font_size : 18
			color: 1,0,0,1
			background_color : 0,0,1,.75
			size_hint: .09,.09
			pos_hint: {"x":0, "top":1}	
			on_release:
				app.root.current = "second"		
				root.manager.transition.direction = "right"
		Label:
			id: btn_rep
			text: "               Hit For \nRepresentation of Word"
			font_size : 18
			color: 0,0,0,1
			size_hint: .3,.3
			pos_hint: {"x":.25, "y":0}



