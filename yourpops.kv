<WindowManager>:

<Button>:

	color:1,0,0,1
	background_normal: ""
	background_color:1,1,1,1

<MainWindow>:
	name: "main"
	btna : btna
	FloatLayout:
		Button: 
			id: btna
			text: "Begin"
			font_size:40
			pos_hint: {"x":.35, "top":.65}
			size_hint : .3,.3
			on_release:app.root.current = "third"
		Button:
			id: btnb
			text: "Exit Game"		
			font_size:25
			size_hint : .3,.3
			on_release: quit()

<ThirdWindow>:
	name: "third"
	FloatLayout:
	
	
	
	
<ForthWindow>:
	name: "forth"
	
	Button:
		id: forth_label
		text: "You Win"
		on_release: 
			root.test()
			app.root.current = "third"

<FifthWindow>:
	name: "fifth"
	id: "wassup"
	Button:
		id: fifth_label
		text: "You Lose"
		on_release: 
			root.test()
			app.root.current = "third"

