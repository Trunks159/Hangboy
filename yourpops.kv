<WindowManager>:

<CustomButton>:
	color : 0,0,0,1

<Button>:
	background_normal: ""


<MainWindow>:
	name: "main"
	btna : btna
	FloatLayout:
		Button: 
			id: btna
			text: "Start Game"
			font_name: 'C:/Windows/Fonts/ALGER.ttf'
			font_size:40
			pos_hint: {"x":.35, "top":.65}
			size_hint : .3,.3
			on_release:app.root.current = "third"
			background_color:0,0,0,0
			color:0,0,0,1
		Button:
			id: btnb
			text: "Exit Game"		
			font_size:25
			size_hint : .3,.3
			on_release: quit()
			color:0,0,0,1
			background_color:0,0,0,0

<ThirdWindow>:
	name: "third"

	
	
	
	
<ForthWindow>:
	name: "forth"
	
	Button:
		id: forth_label
		text: "You Win"
		on_release: 
			root.test()
			app.root.current = "third"
		color:1,1,1,1

<FifthWindow>:
	name: "fifth"
	id: "wassup"
	Button:
		id: fifth_label
		text: "You Lose"
		on_release: 
			root.test()
			app.root.current = "third"
		color : 1,1,1,1

