<WindowManager>:

<Skull>
	source : "Pictures/Skull.png"
	size_hint : [.1,.1]
	allow_stretch : True

<AlphaButton>:
	color : 0,0,0,1

<Button>:
	background_normal: ""


<MainWindow>:
	name: "main"
	btna : btna
	FloatLayout:
		Button: 
			id: btna
			text: "Start Game"
			font_name: 'Fonts/ALGER.ttf'
			font_size:40
			pos_hint: {"x":.35, "top":.65}
			size_hint : .3,.3
			on_release:app.root.current = "third"
			background_color:0,0,0,0
			color:0,0,0,1
		Button:
			id: btnb
			text: "Exit Game"		
			font_size:25
			size_hint : .3,.3
			on_release: quit()
			color:0,0,0,1
			background_color:0,0,0,0

<ThirdWindow>:
	name: "third"
	RelativeLayout:
		id: layout
		Image : 
			source : ""
			size_hint : .6,.7, 
			pos_hint : {'x':.2, 'y': .5} 
			allow_stretch : True
		Label:
			text : root.placeholder
			font_size : 30
			color : 1,1,1,1
			size_hint :  .3, .05
			pos_hint : {'x':.325,'y':.5}
	
<Win>:
	name: "win"
	
	Button:
		id: forth_label
		text: "You Win"
		font_name: 'Fonts/LSANS.ttf'
		font_size:40
		on_release: 
			root.test()
			app.root.current = "third"
		#color:1,1,1,1
		Image:
			source : "Pictures/correct.gif"

<Lose>:
	name: "lose"
	id: "wassup"
	FloatLayout:
		id: float
		Button:
			id: fifth_label
			text: "You Lose"
			on_release: 
				root.test()
				app.root.current = "third"
			color : 0,0,0,1
			size_hint : .4,.4
			pos_hint : {"top": 1, "x": .4}
		


